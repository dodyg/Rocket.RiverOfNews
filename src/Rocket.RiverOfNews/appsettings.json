{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RiverOfNews": {
    "Feed": {
      "PollingIntervalMinutes": 15,
      "RequestTimeoutSeconds": 10,
      "RetentionDays": 30,
      "UnhealthyThreshold": 3,
      "BackoffLevel1Minutes": 5,
      "BackoffLevel2Minutes": 15,
      "BackoffLevel3Minutes": 60
    }
  }
}
